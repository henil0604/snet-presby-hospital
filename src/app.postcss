@tailwind base;
@tailwind components;
@tailwind utilities;

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    @apply min-h-screen;

    min-width: 100vw;
}

html, body { @apply h-full overflow-hidden; }

.min-h-screen {
    min-height: 100vh;
    min-height: 100dvh;
}

.h-screen{
    height: 100vh;
    height: 100dvh;
}

.flex-center{
    @apply flex justify-center items-center;
}